
<%- include("_navbar") -%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Edit Product</title>
</head>
<body>
    <h1 style="text-align: center;">Edit Product</h1>

    <form style="padding: 35px;" method="post" action="/UpdateProduct">
        <div class="mb-3">
          <label for="Product_Name" class="form-label">Product Name</label>
          <input required type="text" placeholder="Enter the Name of the product" class="form-control" id="Product_Name" name="Product_Name" value="<%=Name%>">
        </div>
     
       

        <div class="mb-3">
            <label for="Product Price" class="form-label">Product Price</label>
            <input required type="number"  step="any" placeholder="Enter the sale price of the product $" class="form-control" id="Product_Price" name="Product_Price" value="<%=Price%>">
          </div>

          <div class="mb-3">
            <label for="Price_per_Product" class="form-label">Cost to Make Product</label>
            <input required type="number" step="any" placeholder="Enter the cost to make the Product $" class="form-control" id="Price_per_Product" name="Price_per_Product" value="<%=Cost%>">
          </div>



      
        <button type="submit" class="btn btn-primary">Update Product</button>
      </form>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>


    <script>
        
        function LoadImage() {
            let imgLink = document.getElementById("Product_Image").value;
            if(imgLink !="") {
                document.getElementById("Preview").src = imgLink
                document.getElementById("Preview").width = "200"
                document.getElementById("Preview").heigth = "200"
            }

            
        }

    </script>
</body>
</html>